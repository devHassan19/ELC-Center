<body class="service-details-page">

  <%- include('../partials/_navbar.ejs') %>
    <main class="main">

      <!-- Page Title -->

      <!-- Service Details Section -->
      <section id="service-details" class="service-details section">

        <div class="container">

          <div class="row gy-5">

            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">

              <div class="service-box">
                <h4>Admin Dashboard</h4>
                <div class="services-list">
                  <a href="/admin/class"><i class="bi bi-arrow-right-circle"></i><span>Classes</span></a>
                  <a href="/admin/teacher"><i class="bi bi-arrow-right-circle"></i><span>Teacher</span></a>
                  <!-- <a href="" class="active"><i class="bi bi-arrow-right-circle"></i><span>Subject</span></a> -->
                  <a href="/admin/subject"><i class="bi bi-arrow-right-circle"></i><span>Subject</span></a>
                </div>
              </div><!-- End Services List -->



            </div>

            <div class="col-lg-8 ps-lg-5" data-aos="fade-up" data-aos-delay="200">
              <br><br>
              <h1>Classes</h1>
              <span class="navmenu" style="display: inline;">
                <a class="active" href="/admin/newClass" role="button" style="width: fit-content;">Add a New Class</a>
              </span>
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Teacher</th>
                    <th scope="col">Subject</th>
                    <th scope="col">Time</th>
                  </tr>
                </thead>
                <% let counter=1; %>
                  <% populateClass.forEach((populateClass)=> { %>
                    <tbody>
                      <tr>
                        <td>
                          <%= counter++ %>
                        </td>
                        <td>
                          <%= populateClass.teacher.name %>
                        </td>
                        <td>
                          <%= populateClass.subject.name %>
                        </td>
                        <td>
                          <%= populateClass.time %>
                        </td>
                        <td>
                          <a href="/admin/class/<%= populateClass._id %>/edit">Edit</a>
                        </td>
                        <td>
                          <form action="/admin/class/<%= populateClass._id %>?_method=DELETE" method="POST">
                            <button type="submit">Delete</button>
                          </form>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
              </table>

            </div>

          </div>

        </div>

      </section><!-- /Service Details Section -->

    </main>



    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i
        class="bi bi-arrow-up-short"></i></a>


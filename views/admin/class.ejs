<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>


  <%- include('../partials/_navbar.ejs') %>
    <!--  //Write code here -->
    <p>Hloooo Admin Class Page</p>

    <h1>Classes</h1>
    <a href="/admin/newClass">Add a New Class</a>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Teacher</th>
          <th scope="col">Subject</th>
          <th scope="col">Time</th>
        </tr>
      </thead>
      <% let counter=1; %>
        <% populateClass.forEach((populateClass)=> { %>
          <tbody>
            <tr>
              <td>
                <%= counter++ %>
              </td>
              <td>
                <%= populateClass.teacher %>
              </td>
              <td>
                <%= populateClass.subject %>
              </td>
              <td>
                <%= populateClass.time %>
              </td>
              <td>
                <a href="admin/<%= populateClass._id %>/edit">Edit</a>
              </td>
              <td>
                <form action="/admin/<%= populateClass._id %>?_method=DELETE" method="POST">
                  <button type="submit">Delete</button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
    </table>

</body>

</html>
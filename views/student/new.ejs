<body class="service-details-page">
  <br>
  <%- include('../partials/_stnavbar.ejs') %>
    <main class="main">
      <br><br>

      <!-- Page Title -->

      <!-- Service Details Section -->
      <section id="service-details" class="service-details section">

        <div class="container">

          <div class="row gy-5">

            <div class="col-lg-8 ps-lg-5" data-aos="fade-up" data-aos-delay="200">
              <br>

              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Teacher</th>
                    <th scope="col">Subject</th>
                    <th scope="col">Time</th>
                  </tr>
                </thead>
                <% let counter=1; %>
                  <% Class.forEach((populatedClass)=> { %>
                    <tbody>
                      <tr>
                        <td>
                          <%= counter++ %>
                        </td>
                        <td>
                          <%= populatedClass.teacher %>
                        </td>
                        <td>
                          <%= populatedClass.subject %>
                        </td>
                        <td>
                          <%= populatedClass.time %>
                        </td>
                        <td>
                          <form action="/student<%= populatedClass._id %>?_method=DELETE" method="POST">
                            <button type="submit">Join to class</button>
                          </form>
                          <form action="/" method="POST">
                            <button type="submit">Favorite</button>
                          </form>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
              </table>

            </div>

          </div>

        </div>

      </section><!-- /Service Details Section -->

    </main>



    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i
        class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
